dotnet_diagnostis.CS8981.severity                                                = none # Type name only contains lower-cased ascii characters
dotnet_diagnostis.CS8618.severity                                                = none # Consider adding the 'required' modifier or declaring the property as nullable.

[*.{cs, cpp, h}]
file_header_template = Copyright (c) 2014-2025 Sarin Na Wangkanai, All Rights Reserved.

[*.{cshtml,razor,html}]
max_line_length                                                        = 1000
resharper_no_indent_inside_elements                                    = html, thead, tbody, tfoot
resharper_no_indent_inside_if_element_longer_than                      = 1000
resharper_normalize_tag_names                                          = true
resharper_html_allow_far_alignment                                     = true
resharper_html_attribute_indent                                        = single_indent
resharper_html_attribute_style                                         = on_single_line
resharper_html_linebreak_before_elements                               = body, div, p, main, section, article, form, h1, h2, h3, svg, path
resharper_html_linebreak_before_multiline_elements                     = false
resharper_html_linebreaks_inside_tags_for_elements_with_child_elements = false
resharper_html_linebreaks_inside_tags_for_multiline_elements           = false
ij_html_do_not_align_children_of_min_lines                             = 0
ij_html_do_not_break_if_inline_tags                                    = title, h1, h2, h3, h4, h5, h6, p, li, span
ij_html_do_not_indent_children_of_tags                                 = form, ul, ol, script, style, h1, h2, h3, h4, h5, h6, table, thead, tbody, tfoot

# Code style settings
[.editorconfig]
ij_editorconfig_align_group_field_declarations     = true
ij_editorconfig_spaces_around_assignment_operators = true
ij_editorconfig_space_after_equal                  = true
ij_editorconfig_space_after_colon                  = true
ij_editorconfig_space_after_comma                  = true
ij_editorconfig_space_before_colon                 = false
ij_editorconfig_space_before_comma                 = false

# Ignore formatter for generated files
[{**/node_modules/*,**/lib/*,**/Migrations/*}]
generated_code       = true
ij_formatter_enabled = false

[*.{slnx, csproj, props, targets}]
indent_size                   = 2
ij_xml_space_inside_empty_tag = true

[*.{ps1, psd1}]
indent_size                                      = 4
case_style                                       = pascal_case
ij_powershell_spaces_around_assignment_operators = false
ij_powershell_space_after_type_cast              = false
ij_powershell_align_multiline_binary_operation   = true
ij_powershell_align_multiline_chained_methods    = true

[*.{scss, sass,less,css}]
indent_size            = 2
ij_css_value_alignment = on_value

[*.{ts, js, js.map}]
indent_size = 2

[*.{yml, yaml}]
indent_size = 2


